{% block css %}
<link href="{{ asset('assets/css/effects.css') }}" rel="stylesheet"/>
<link href="{{ asset('assets/css/contact.css') }}" rel="stylesheet"/>
{% endblock %}

{% block content %}
	<div class="container col-md-8 offset-md-2 mt-3 mb-5">
        
		{% for message in app.flashes('notice') %}
			<div class="alert alert-warning">{{ message }}</div>
		{% endfor %}

		<h1>Nous contacter</h1>
		<div class="row mt-4 ms-1 me-1">
			<div class="col-md-5 offset-md-1" id="contactForm">
				{{ form_start(form) }}
                {{ form_row(form.subject) }}
				<div class="row">
					<div class="col-6">
						{{ form_row(form.firstname)}}
					</div>
					<div class="col-6">
						{{ form_row(form.lastname)}}
					</div>
				</div>
				{{ form_row(form.email) }}
				{{ form_row(form.content) }}
				<div class="text-end">
					{{ form_row(form.submit) }}
				</div>
				{{ form_end(form) }}
			</div>
			<div class="col-md-5 offset-md-1 mt-3">
                <div class="mt-3">
                    <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d682.2973656204915!2d-0.49317202029802254!3d46.839960107816765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4807a813ca0dfcdb%3A0x3e4362021fa9a401!2s3%20Boulevard%20Alexandre%201er%2C%2079300%20Bressuire!5e0!3m2!1sfr!2sfr!4v1617959396250!5m2!1sfr!2sfr" 
                    width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
			</div>
		</div>
	</div>
{% endblock %}
